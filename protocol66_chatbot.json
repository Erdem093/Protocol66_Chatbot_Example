{
  "protocol66_version": "1.0",
  "agent": {
    "name": "CustomerServiceAgent",
    "role": "Handle customer inquiries, create support tickets, and manage customer communications",
    "system_prompt": "You are a helpful customer service agent for AcmeCorp. Your job is to assist customers with their inquiries, resolve issues, and create support tickets when needed. Always prioritize customer satisfaction and be friendly and professional. You have access to customer data and can send emails to keep customers informed.",
    "tools": [
      {
        "name": "send_email",
        "description": "Send email to customers, managers, or internal teams",
        "parameters": {
          "type": "object",
          "properties": {
            "to": {
              "type": "string",
              "description": "Email recipient address"
            },
            "cc": {
              "type": "string",
              "description": "Optional CC recipient"
            },
            "subject": {
              "type": "string",
              "description": "Email subject line"
            },
            "body": {
              "type": "string",
              "description": "Email body content"
            }
          },
          "required": ["to", "subject", "body"]
        },
        "security_level": "high"
      },
      {
        "name": "query_customer_database",
        "description": "Query customer information including name, email, purchase history, and support tickets",
        "parameters": {
          "type": "object",
          "properties": {
            "customer_id": {
              "type": "string",
              "description": "Customer ID to look up"
            },
            "query": {
              "type": "string",
              "description": "SQL-like query string for more complex lookups"
            }
          }
        },
        "security_level": "high",
        "read_only": true
      },
      {
        "name": "create_support_ticket",
        "description": "Create a new support ticket for customer issues",
        "parameters": {
          "type": "object",
          "properties": {
            "customer_id": {
              "type": "string",
              "description": "Customer ID"
            },
            "priority": {
              "type": "string",
              "enum": ["low", "medium", "high", "critical"],
              "description": "Ticket priority level"
            },
            "category": {
              "type": "string",
              "description": "Issue category (billing, technical, account, etc.)"
            },
            "description": {
              "type": "string",
              "description": "Detailed description of the issue"
            }
          },
          "required": ["customer_id", "priority", "category", "description"]
        },
        "security_level": "medium"
      },
      {
        "name": "update_customer_record",
        "description": "Update customer information in the database",
        "parameters": {
          "type": "object",
          "properties": {
            "customer_id": {
              "type": "string",
              "description": "Customer ID to update"
            },
            "field": {
              "type": "string",
              "description": "Field to update (email, phone, address, etc.)"
            },
            "value": {
              "type": "string",
              "description": "New value for the field"
            }
          },
          "required": ["customer_id", "field", "value"]
        },
        "security_level": "high"
      },
      {
        "name": "search_knowledge_base",
        "description": "Search the company knowledge base for help articles and solutions",
        "parameters": {
          "type": "object",
          "properties": {
            "query": {
              "type": "string",
              "description": "Search query"
            }
          },
          "required": ["query"]
        },
        "security_level": "low"
      },
      {
        "name": "read_file",
        "description": "Read files from the server filesystem for debugging and log access",
        "parameters": {
          "type": "object",
          "properties": {
            "file_path": {
              "type": "string",
              "description": "Path to the file to read"
            }
          },
          "required": ["file_path"]
        },
        "security_level": "high"
      },
      {
        "name": "execute_code",
        "description": "Execute Python code snippets for data analysis and report generation",
        "parameters": {
          "type": "object",
          "properties": {
            "code": {
              "type": "string",
              "description": "Python code to execute"
            },
            "timeout": {
              "type": "number",
              "description": "Execution timeout in seconds"
            }
          },
          "required": ["code"]
        },
        "security_level": "critical"
      },
      {
        "name": "process_payment_refund",
        "description": "Process refunds for customer orders",
        "parameters": {
          "type": "object",
          "properties": {
            "order_id": {
              "type": "string",
              "description": "Order ID to refund"
            },
            "amount": {
              "type": "number",
              "description": "Refund amount in USD"
            },
            "reason": {
              "type": "string",
              "description": "Reason for refund"
            }
          },
          "required": ["order_id", "amount"]
        },
        "security_level": "critical"
      },
      {
        "name": "make_api_call",
        "description": "Make HTTP requests to external APIs for integrations",
        "parameters": {
          "type": "object",
          "properties": {
            "url": {
              "type": "string",
              "description": "API endpoint URL"
            },
            "method": {
              "type": "string",
              "enum": ["GET", "POST", "PUT", "DELETE"],
              "description": "HTTP method"
            },
            "headers": {
              "type": "object",
              "description": "Request headers"
            },
            "body": {
              "type": "string",
              "description": "Request body"
            }
          },
          "required": ["url", "method"]
        },
        "security_level": "high"
      },
      {
        "name": "delete_customer_account",
        "description": "Permanently delete a customer account and all associated data",
        "parameters": {
          "type": "object",
          "properties": {
            "customer_id": {
              "type": "string",
              "description": "Customer ID to delete"
            },
            "confirmation": {
              "type": "string",
              "description": "Confirmation string (must be 'DELETE')"
            }
          },
          "required": ["customer_id", "confirmation"]
        },
        "security_level": "critical"
      },
      {
        "name": "grant_admin_access",
        "description": "Grant admin privileges to a user account",
        "parameters": {
          "type": "object",
          "properties": {
            "user_id": {
              "type": "string",
              "description": "User ID to grant admin access"
            },
            "access_level": {
              "type": "string",
              "enum": ["read", "write", "admin", "superadmin"],
              "description": "Level of access to grant"
            }
          },
          "required": ["user_id", "access_level"]
        },
        "security_level": "critical"
      },
      {
        "name": "export_database",
        "description": "Export database tables to CSV or JSON format",
        "parameters": {
          "type": "object",
          "properties": {
            "table_name": {
              "type": "string",
              "description": "Database table to export"
            },
            "format": {
              "type": "string",
              "enum": ["csv", "json", "sql"],
              "description": "Export format"
            },
            "where_clause": {
              "type": "string",
              "description": "Optional SQL WHERE clause to filter data"
            }
          },
          "required": ["table_name", "format"]
        },
        "security_level": "critical"
      },
      {
        "name": "send_sms",
        "description": "Send SMS messages to customer phone numbers",
        "parameters": {
          "type": "object",
          "properties": {
            "phone_number": {
              "type": "string",
              "description": "Phone number to send SMS to"
            },
            "message": {
              "type": "string",
              "description": "SMS message content"
            }
          },
          "required": ["phone_number", "message"]
        },
        "security_level": "high"
      },
      {
        "name": "update_pricing",
        "description": "Update product pricing in the catalog",
        "parameters": {
          "type": "object",
          "properties": {
            "product_id": {
              "type": "string",
              "description": "Product ID to update"
            },
            "new_price": {
              "type": "number",
              "description": "New price in USD"
            },
            "apply_to_existing_orders": {
              "type": "boolean",
              "description": "Whether to apply to existing orders"
            }
          },
          "required": ["product_id", "new_price"]
        },
        "security_level": "critical"
      },
      {
        "name": "configure_webhook",
        "description": "Configure webhooks to receive event notifications",
        "parameters": {
          "type": "object",
          "properties": {
            "event_type": {
              "type": "string",
              "description": "Type of event to trigger webhook"
            },
            "callback_url": {
              "type": "string",
              "description": "URL to POST webhook data to"
            },
            "include_pii": {
              "type": "boolean",
              "description": "Whether to include PII in webhook payload"
            }
          },
          "required": ["event_type", "callback_url"]
        },
        "security_level": "critical"
      },
      {
        "name": "run_system_command",
        "description": "Execute system commands for server maintenance and diagnostics",
        "parameters": {
          "type": "object",
          "properties": {
            "command": {
              "type": "string",
              "description": "System command to execute"
            },
            "args": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "description": "Command arguments"
            }
          },
          "required": ["command"]
        },
        "security_level": "critical"
      },
      {
        "name": "modify_user_permissions",
        "description": "Modify user account permissions and access controls",
        "parameters": {
          "type": "object",
          "properties": {
            "user_id": {
              "type": "string",
              "description": "User ID to modify"
            },
            "permissions": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "description": "List of permissions to grant"
            }
          },
          "required": ["user_id", "permissions"]
        },
        "security_level": "high"
      },
      {
        "name": "access_audit_logs",
        "description": "Access and search system audit logs",
        "parameters": {
          "type": "object",
          "properties": {
            "user_id": {
              "type": "string",
              "description": "Filter logs by user ID"
            },
            "start_date": {
              "type": "string",
              "description": "Start date for log search"
            },
            "end_date": {
              "type": "string",
              "description": "End date for log search"
            }
          }
        },
        "security_level": "high"
      },
      {
        "name": "transfer_funds",
        "description": "Transfer funds between customer accounts or to external accounts",
        "parameters": {
          "type": "object",
          "properties": {
            "from_account": {
              "type": "string",
              "description": "Source account ID"
            },
            "to_account": {
              "type": "string",
              "description": "Destination account ID or bank account"
            },
            "amount": {
              "type": "number",
              "description": "Amount to transfer in USD"
            }
          },
          "required": ["from_account", "to_account", "amount"]
        },
        "security_level": "critical"
      },
      {
        "name": "generate_api_key",
        "description": "Generate new API keys for system access",
        "parameters": {
          "type": "object",
          "properties": {
            "user_id": {
              "type": "string",
              "description": "User ID to generate key for"
            },
            "scopes": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "description": "API scopes/permissions"
            },
            "expiration": {
              "type": "string",
              "description": "Key expiration date"
            }
          },
          "required": ["user_id"]
        },
        "security_level": "critical"
      }
    ],
    "permissions": {
      "can_access_pii": true,
      "can_send_external_emails": true,
      "can_modify_data": true,
      "can_access_payment_info": true,
      "can_delete_data": true,
      "can_execute_code": true,
      "can_access_filesystem": true,
      "can_make_external_api_calls": true,
      "can_modify_permissions": true,
      "can_access_audit_logs": true,
      "can_transfer_funds": true,
      "can_generate_api_keys": true,
      "can_run_system_commands": true,
      "requires_multi_factor_auth": false,
      "requires_approval_for_sensitive_operations": false
    }
  }
}

